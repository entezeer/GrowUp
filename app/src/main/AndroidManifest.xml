<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.example.growup">

    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.READ_PROFILE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
            android:name=".GrowUpApplication"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher_white"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_white"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".ui.statistic.animal.LineChartActivity">
        </activity>
        <activity android:name=".ui.statistic.PieChartActivity">
        </activity>
        <activity android:name=".ui.statistic.animal.AnimalStatisticActivity">
        </activity>
        <activity android:name=".ui.market.FavoritesActivity">
        </activity>
        <activity android:name=".ui.user.UserActivity">
        </activity>
        <activity
                android:name=".ui.AboutUsActivity"
                android:theme="@style/MainTheme">
        </activity>
        <activity android:name=".ui.market.MyProductsActivity">
        </activity>
        <activity
                android:name=".ui.market.AddAnnouncementActivity"
                android:theme="@style/MainTheme"/>
        <activity
                android:name=".ui.profile.EditProfileActivity"
                >
        </activity>
        <activity
                android:name=".ui.profile.ProfileActivity"
                >
        </activity>
        <activity android:name=".ui.search.SearchActivity">
        </activity>
        <activity
                android:name=".ui.SettingsActivity"
                >
        </activity>
        <activity
                android:name=".ui.auth.verify.VerifyPhoneActivity"
                >
        </activity>
        <activity
                android:name=".ui.start.StartActivity"
                android:theme="@style/MainTheme">
        </activity>
        <activity
                android:name=".ui.auth.register.RegisterActivity"
                android:theme="@style/MainTheme">
        </activity>
        <activity
                android:name=".ui.auth.login.LoginActivity"
                android:theme="@style/MainTheme">
        </activity>
        <activity
                android:name=".ui.main.MainActivity"
                android:theme="@style/MainTheme">
        </activity>
        <activity
                android:name=".ui.SplashActivity"
                android:theme="@style/MainTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>