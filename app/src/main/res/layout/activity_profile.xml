<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools"
        android:background="@color/profile_gray"
        android:layout_height="match_parent"
        tools:context="com.example.growup.ui.SettingsActivity"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.design.widget.FloatingActionButton
            android:backgroundTint="@color/profile_gray"
            android:id="@+id/back_button"
            android:layout_margin="18dp"
            android:src="@drawable/back_button_48"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:ignore="UnusedAttribute"/>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:padding="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="30sp"
                    android:text="@string/profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profileImage"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="150dp"
                    android:layout_height="150dp"/>
            <Button
                    android:id="@+id/edit_profile_btn"
                    android:background="@drawable/button_bg"
                    android:text="@string/edit_profile"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="300dp"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"/>
            <Button
                    android:id="@+id/my_products"
                    android:background="@drawable/button_bg"
                    android:text="@string/my_products"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/white"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"/>
            <Button
                    android:id="@+id/favorite"
                    android:background="@drawable/button_bg"
                    android:text="@string/favorite"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/white"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/profile_user_name"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:drawableLeft="@drawable/user_icon_24"
                    android:drawablePadding="20dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/round_background"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"/>
            <TextView
                    android:id="@+id/profile_user_surname"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:drawableLeft="@drawable/user_icon_rect_24"
                    android:drawablePadding="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/round_background"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"/>
            <TextView
                    android:id="@+id/profile_user_type"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:drawableLeft="@drawable/user_type_24"
                    android:drawablePadding="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/round_background"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"/>

            <TextView
                    android:id="@+id/profile_email"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:drawableLeft="@drawable/user_email_24"
                    android:drawablePadding="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/round_background"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"/>
            <TextView
                    android:id="@+id/profile_phone_number"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:drawableLeft="@drawable/user_phone_24"
                    android:drawablePadding="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/round_background"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"/>
            <TextView
                    android:id="@+id/profile_user_region"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:drawableLeft="@drawable/user_region_24"
                    android:drawablePadding="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/round_background"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>


