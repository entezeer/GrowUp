<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@drawable/round_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:layout_margin="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/detail_image"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="150dp"
                    android:layout_height="150dp"/>
            <TextView
                    android:id="@+id/detail_product"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:textSize="15sp"
                    android:textStyle="bold"
            />
            <TextView
                    android:id="@+id/detail_unit_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
            />
            <TextView
                    android:id="@+id/detail_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
            />
            <TextView
                    android:id="@+id/detail_total_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
            />

            <TextView
                    android:id="@+id/detail_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
            />
            <TextView
                    android:id="@+id/detail_user_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
            />
            <TextView
                    android:id="@+id/detail_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
            />

            <View
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey"/>
            <LinearLayout
                    android:id="@+id/get_user"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="?android:attr/selectableItemBackground"
                    tools:ignore="UnusedAttribute">

                <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/user_icon"
                        android:textColor="@color/white"
                        android:layout_width="50dp"
                        android:layout_height="50dp"/>
                <TextView
                        android:layout_marginLeft="7dp"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/detail_user"
                        android:textSize="15sp"
                        android:textColor="@color/grey2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                />

            </LinearLayout>
            <LinearLayout
                    android:padding="10dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <Button
                        android:drawableLeft="@drawable/whatsapp_icon_24"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/whatsapp_btn"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="3dp"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:text="@string/messaging"
                        android:padding="6dp"
                        android:background="@drawable/rounded_button"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp" tools:ignore="RtlHardcoded,SmallSp"/>
                <Button
                        android:layout_marginLeft="10dp"
                        android:drawableLeft="@drawable/call_icon_24"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/call_btn"
                        android:textSize="12sp"
                        android:layout_marginTop="3dp"
                        android:textColor="@color/white"
                        android:text="@string/calling"
                        android:padding="6dp"
                        android:background="@drawable/rounded_button"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp" tools:ignore="RtlHardcoded,SmallSp"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
