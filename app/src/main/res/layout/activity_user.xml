<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/profile_gray"
        android:layout_height="match_parent"
        tools:context="com.example.growup.ui.SettingsActivity">
    <android.support.design.widget.FloatingActionButton
            android:backgroundTint="@color/profile_gray"
            android:id="@+id/back_button"
            android:layout_margin="18dp"
            android:src="@drawable/back_button_48"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:ignore="UnusedAttribute"/>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:layout_margin="20dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="30sp"
                    android:text="@string/profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <LinearLayout
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_background">

                <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_image"

                        android:layout_gravity="center_horizontal"
                        android:layout_width="100dp"
                        android:layout_height="100dp"/>
                <TextView
                        android:layout_marginLeft="10dp"
                        android:id="@+id/profile_user_name"
                        android:textColor="@color/black"
                        android:layout_gravity="center_vertical"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"/>
            </LinearLayout>

            <TextView
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/profile_phone_number"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:drawableLeft="@drawable/user_phone_24"
                    android:drawablePadding="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/round_background"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"/>
            <TextView
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/profile_user_region"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:drawableLeft="@drawable/user_region_24"
                    android:drawablePadding="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/round_background"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"/>

            <android.support.design.widget.TabLayout
                    android:layout_gravity="bottom"
                    android:id="@+id/tabs"
                    app:tabTextColor="@color/mainGreen"
                    app:tabIndicatorColor="@color/mainGreen"
                    android:background="@color/profile_gray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <android.support.v4.view.ViewPager
                    android:id="@+id/view_pager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
</RelativeLayout>


