<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent"
        tools:context="com.example.growup.ui.SettingsActivity">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_margin="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="20dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="30sp"
                    android:text="@string/settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:textColor="@color/mainGreen"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Профиль"/>
            <View android:layout_width="match_parent"
                  android:layout_height="1dp"
                    android:background="@color/mainGreen"/>
            <RelativeLayout
                    android:id="@+id/settigs_user_info"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:id="@+id/settings_user_image"/>
                    <TextView
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="8dp"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:layout_toRightOf="@id/settings_user_image"
                            android:id="@+id/settings_user_name"
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                <TextView
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="8dp"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:layout_below="@id/settings_user_name"
                        android:layout_toRightOf="@id/settings_user_image"
                        android:id="@+id/settings_user_type"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

            </RelativeLayout>
            <TextView
                    android:textColor="@color/mainGreen"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Интерфейс"/>
            <View android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:background="@color/mainGreen"/>
            <LinearLayout
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/black"
                        android:text="Язык"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                <Spinner
                        android:textAlignment="center"
                        android:gravity="center_vertical"
                        android:id="@+id/settings_lang_spinner"
                        android:layout_gravity="right|center_vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
            </LinearLayout>


            <TextView
                    android:textColor="@color/mainGreen"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Прочее"/>
            <View android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:background="@color/mainGreen"/>
            <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:gravity="left|center_vertical"
                    android:id="@+id/button_about_us"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="@android:dimen/app_icon_size"
                    android:text="О нас " />
            <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:gravity="left|center_vertical"
                    android:id="@+id/button_rate_app"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="@android:dimen/app_icon_size"
                    android:text="Оцените приложение" />
            <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:gravity="left|center_vertical"
                    android:id="@+id/button_report_bug"
                    android:background="@color/white"
                    android:text="Нашли ошибку ? "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:gravity="left|center_vertical"
                    android:id="@+id/button_share_app"
                    android:background="@color/white"
                    android:text="Поелиться приложением"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
        </LinearLayout>
    </ScrollView>


</RelativeLayout>
